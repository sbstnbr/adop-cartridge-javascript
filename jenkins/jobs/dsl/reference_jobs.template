                |   /etc/init.d/zaproxy stop test-${BUILD_NUMBER}
                |docker cp ${CONTAINER_NAME}:/opt/zaproxy/test-results/test-${BUILD_NUMBER}-report.html .
                |sleep 10s
                |docker rm $(docker ps --all -q -f exited=0)
                '''.stripMargin())
